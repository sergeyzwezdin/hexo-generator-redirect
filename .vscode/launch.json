  "version": "0.2.0",
  "configurations": [
    {
      "command": "hexo s",
      "name": "prod server",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "NODE_ENV": "production"
      },
      "cwd": "${workspaceFolder}/../../site"
    },
    {
      "command": "hexo clean && hexo s --dev --debug",
      "name": "dev server",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/../../site"
    },
    {
      "command": "hexo clean && hexo --debug --dev",
      "name": "debug",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/../../site"
    }
  ]
}